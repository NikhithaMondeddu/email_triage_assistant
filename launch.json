{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Web Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Start Server then Open Chrome",
            "configurations": ["Run Web Server", "Launch Chrome against localhost"],
            "stopAll": true
        }
    ]
}
